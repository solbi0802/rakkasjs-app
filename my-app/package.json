{
  "private": true,
  "name": "--TODO--",
  "version": "0.0.1",
  "description": "Rakkas.js TypeScript demo project",
  "scripts": {
    "dev": "rakkas dev --open",
    "build": "rakkas build",
    "start": "node dist/server",
    "check": "run-p 'lint:*' typecheck 'test:*'",
    "test": "run-p 'test:*'",
    "test:unit": "jest",
    "test:e2e": "rakkas with-port \"start-server-and-test 'npm start' http-get://\\$HOST:\\$PORT 'run-s 'test:e2e:*''\"",
    "test:e2e:api": "jest --config jest-api-test.config.json --maxWorkers=1 api-test",
    "test:e2e:browser": "cypress run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "run-p 'lint:*'",
    "lint:ts": "eslint src",
    "lint:css": "stylelint \"src/**/*.css\"",
    "format": "prettier . --write"
  },
  "dependencies": {
    "rakkasjs": "0.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.2"
  },
  "devDependencies": {
    "@rakkasjs/cli": "0.5.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/node-fetch": "2.5.12",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/testing-library__jest-dom": "^5.14.2",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "cypress": "^9.1.1",
    "esbuild": "^0.14.3",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-ssr-friendly": "^1.0.5",
    "jest": "^27.4.5",
    "jest-css-modules-transform": "^4.3.0",
    "node-fetch": "^2.6.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.1.0",
    "stylelint-config-css-modules": "^2.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.4",
    "typescript-plugin-css-modules": "^3.4.0"
  }
